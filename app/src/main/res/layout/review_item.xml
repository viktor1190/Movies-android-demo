<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="review"
            type="com.example.android.architecture.blueprints.movies.data.Review" />

        <variable
            name="viewmodel"
            type="com.example.android.architecture.blueprints.movies.movieDetail.MovieDetailViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:background="@color/white_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/MaterialMoviesReviewAuthor"
                android:id="@+id/review_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{review.author}"
                tools:text="@tools:sample/full_names" />

            <TextView
                style="@style/MaterialMoviesReviewContent"
                android:id="@+id/review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{review.value}"
                tools:text="@tools:sample/lorem/random" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>