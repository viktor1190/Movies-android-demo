<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Components-->
    <style name="ThemeOverlay.GlobalEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_input_shape</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--List Sheets-->
    <style name="listSection" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black_800</item>
        <item name="android:background">@color/white_translucid</item>
    </style>

    <!--Detail Sheets-->
    <style name="MaterialMoviesDetailFieldBase" parent="android:TextAppearance.Material">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="MaterialMoviesHeaderTextView" parent="MaterialMoviesDetailFieldBase">
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>
    <style name="MaterialMoviesReviewTextView" parent="MaterialMoviesDetailFieldBase">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">@dimen/movie_description_container_padding</item>
        <item name="android:paddingEnd">@dimen/movie_description_container_padding</item>
        <item name="android:paddingBottom">@dimen/movie_description_container_padding</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="MaterialMoviesTitle" parent="android:TextAppearance.Material.Display1">
        <item name="android:background">@color/black_translucid</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="MaterialMoviesReviewAuthor" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="MaterialMoviesReviewContent" parent="MaterialMoviesDetailFieldBase">
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
